<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="background_default">
        <item name="background">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:paddingHorizontal">@dimen/text_size_md</item>
    </style>
    <style name="float_btn">
        <item name="backgroundTint">@color/red_300</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="layout">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    <style name="edt">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="backgroundTint">@color/white</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textColorHighlight">@color/black</item>
    </style>
    <style name="layout_edt">
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_size_sm</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_size_sm</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_size_sm</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_size_sm</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="prefixTextColor">@color/black</item>
        <item name="suffixTextColor">@color/black</item>
    </style>

    <style name="btn_stroke_white">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/red_300</item>
        <item name="cornerRadius">@dimen/text_size_sm</item>
        <item name="strokeColor">@color/red_300</item>
        <item name="android:height">64dp</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="btn_add_product">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="background">@color/red_300</item>
        <item name="android:paddingHorizontal">@dimen/text_size_md</item>
        <item name="android:paddingVertical">@dimen/text_size_md</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="cornerRadius">@dimen/text_size_sm</item>
    </style>
    <style name="item_product">
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/box_shadow</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:paddingHorizontal">@dimen/text_size_md</item>
        <item name="android:paddingVertical">@dimen/text_size_md</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="cornerRadius">@dimen/text_size_sm</item>
    </style>
    <style name="btn_normal">
        <item name="backgroundTint">@color/red_300</item>
        <item name="cornerRadius">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">64dp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>