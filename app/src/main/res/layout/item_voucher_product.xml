<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/text_size_md"
    android:orientation="vertical"
    android:layout_margin="@dimen/text_size_sm"
    android:background="@drawable/ic_launcher_edt"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Miễn phí vận chuyển"
                android:textSize="@dimen/text_size_md"
                android:id="@+id/txt_title"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/text_size_sm"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_date_product"
                android:layout_width="wrap_content"
                android:text="HSD: từ ngày 27/04 đến 23/05"
                android:textColor="@color/gray_200"
                android:layout_marginBottom="@dimen/text_size_sm"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/text_size_sm"
                android:id="@+id/txt_description_product"
                android:text="Giảm đến 15k cho đơn từ 0đ"
                android:textColor="@color/red_300"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/discount_food"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/ic_launcher_dash" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/text_size_sm"
            android:text="Điều kiện"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/constrain"
            android:textColor="@color/navy"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_save_product"
            style="@style/btn_stroke_white"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:text="Lưu"
            android:textSize="@dimen/text_size_sm"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</LinearLayout>