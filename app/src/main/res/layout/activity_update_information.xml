<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".activity.UpdateInformationActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/lobster_regular"
        android:gravity="center"
        android:text="@string/update_information"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size_lg"
        android:layout_marginTop="@dimen/text_size_xl"
        android:layout_marginRight="@dimen/text_size_lg"
        android:hint="@string/name"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/black"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/text_size_sm"
        app:boxCornerRadiusBottomStart="@dimen/text_size_sm"
        app:boxCornerRadiusTopEnd="@dimen/text_size_sm"
        app:boxCornerRadiusTopStart="@dimen/text_size_sm"
        app:boxStrokeColor="@color/black"
        app:counterTextColor="@color/black"
        app:endIconMode="clear_text"
        app:helperTextTextColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:placeholderTextColor="@color/black"
        app:prefixTextColor="@color/black"
        app:suffixTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:inputType="text"
            android:shadowColor="@color/black"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size_lg"
        android:layout_marginTop="@dimen/text_size_lg"
        android:layout_marginRight="@dimen/text_size_lg"
        android:hint="@string/email"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/black"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/text_size_sm"
        app:boxCornerRadiusBottomStart="@dimen/text_size_sm"
        app:boxCornerRadiusTopEnd="@dimen/text_size_sm"
        app:boxCornerRadiusTopStart="@dimen/text_size_sm"
        app:boxStrokeColor="@color/black"
        app:counterTextColor="@color/black"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:inputType="text|textEmailAddress"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size_lg"
        android:layout_marginTop="@dimen/text_size_lg"
        android:layout_marginRight="@dimen/text_size_lg"
        android:hint="@string/address"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/black"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/text_size_sm"
        app:boxCornerRadiusBottomStart="@dimen/text_size_sm"
        app:boxCornerRadiusTopEnd="@dimen/text_size_sm"
        app:boxCornerRadiusTopStart="@dimen/text_size_sm"
        app:boxStrokeColor="@color/black"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout5">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size_lg"
        android:layout_marginTop="@dimen/text_size_lg"
        android:layout_marginRight="@dimen/text_size_lg"
        android:hint="@string/phone"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/black"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/text_size_sm"
        app:boxCornerRadiusBottomStart="@dimen/text_size_sm"
        app:boxCornerRadiusTopEnd="@dimen/text_size_sm"
        app:boxCornerRadiusTopStart="@dimen/text_size_sm"
        app:boxStrokeColor="@color/black"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout6">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:inputType="phone"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/id_update_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/red_300"
        android:text="@string/update"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/text_size_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/back"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>