<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_MapUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/map1"></ImageView>
    <TextView
        android:id="@+id/txtMapUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn muốn BunBuzz giao tới địa chỉ nào?"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"></TextView>
    <EditText
        android:id="@+id/edt_MapUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_xxl"
        android:layout_marginTop="@dimen/text_size_lg"
        android:background="@drawable/ic_launcher_edt"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="text"
        android:fontFamily="@font/roboto_regular"
        android:hint="      175 Tây Sơn, Quang Trung , Đống Đa , Hà Nội"
        android:paddingStart="@dimen/text_size_md"
        android:ems="15"
        android:text=""
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50dp"
        android:clickable="true"
        android:fontFamily="@font/roboto_black"
        android:text="Hoặc bạn muốn dùng vị trí hiện tại"
        android:textColor="@color/red"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_md"
        tools:ignore="TouchTargetSizeCheck" />
    <Button
        android:id="@+id/btn_oder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_size_lg"
        style="@style/btn_normal"
        android:text="Tiến hành đặt hàng"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_more" />





</LinearLayout>
