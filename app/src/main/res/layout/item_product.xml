<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rlsvtxl2buyg"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:background="@drawable/ic_launcher_edt"
    android:padding="12dp"
    android:layout_marginBottom="@dimen/text_size_md"
    android:layout_marginEnd="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ry4bzf4q1im"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/burger_size_middle"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rlzqgqoxoeig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_product"
            android:textColor="#181725"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Diet Coke"
            />
        <TextView
            android:id="@+id/r0klv7faus2q"
            android:textColor="#7C7C7C"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="255ml, Price"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/r6hfq8e4xlxe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/price_product"
            android:textColor="#181725"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="$1.99"
            />
        <LinearLayout
            android:id="@+id/r66e4whs7v3m"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
        </LinearLayout>
       <ImageButton
           android:layout_width="32dp"
           android:src="@drawable/plus"
           android:scaleType="fitXY"
           android:tint="@color/white"
           android:background="@drawable/ic_launcher_btn"
           android:layout_height="32dp"/>
    </LinearLayout>
</LinearLayout>