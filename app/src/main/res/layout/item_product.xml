<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlsvtxl2buyg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/text_size_md"
    android:layout_marginTop="@dimen/text_size_md"
    android:layout_marginRight="@dimen/text_size_md"
    android:layout_marginBottom="@dimen/text_size_md"
    android:background="@drawable/ic_launcher_edt"
    android:elevation="@dimen/text_size_md"
    android:orientation="horizontal"
    android:padding="@dimen/text_size_sm">

    <LinearLayout
        android:id="@+id/ry4bzf4q1im"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/burger_size_middle" />

        <LinearLayout
            android:id="@+id/rlzqgqoxoeig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/text_size_md"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Diet Coke"
                android:textColor="#181725"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/r0klv7faus2q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255ml, Price"
                android:textColor="#7C7C7C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1.99"
                android:textColor="#181725"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_add_box_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,UseAppTint" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r6hfq8e4xlxe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/r66e4whs7v3m"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>
</LinearLayout>