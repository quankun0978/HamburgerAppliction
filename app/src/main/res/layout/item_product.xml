<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/text_size_sm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100sp"
        android:scaleType="centerCrop"
        android:maxWidth="@dimen/text_size_sm"
        android:src="@drawable/burger_size_middle"
        android:layout_height="100sp"/>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_marginStart="@dimen/text_size_xl"
       android:layout_gravity="center_vertical"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/txt_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:textSize="@dimen/text_size_md"
           android:text="ID :1"
           />
       <TextView
           android:id="@+id/txt_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/text_size_sm"
           android:textColor="@color/black"
           android:text="Name :Quan"
           />
   </LinearLayout>
</LinearLayout>