<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/account"
        android:paddingHorizontal="@dimen/text_size_md"
        tools:context=".fragment.AccountFragment">

        <!-- TODO: Update blank fragment layout -->


        <ImageView
            android:id="@+id/img_product"
            android:layout_width="300dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_height="300sp"
            android:src="@drawable/add" />
        <EditText
            android:id="@+id/edt_name_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_xxl"
            android:layout_marginTop="@dimen/text_size_lg"
            android:background="@drawable/ic_launcher_edt"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="text"
            android:fontFamily="@font/roboto_regular"
            android:hint="Tên sản phẩm"
            android:paddingStart="@dimen/text_size_md"
            android:ems="10"
            android:text=""
            tools:ignore="RtlSymmetry" />
        <EditText
            android:id="@+id/edt_price_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_xxl"
            android:layout_marginTop="@dimen/text_size_lg"
            android:background="@drawable/ic_launcher_edt"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="number"
            android:fontFamily="@font/roboto_regular"
            android:hint="Giá tiền"
            android:paddingStart="@dimen/text_size_md"
            android:ems="10"
            android:text=""
            tools:ignore="RtlSymmetry" />
        <EditText
            android:id="@+id/edt_description_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_xxl"
            android:layout_marginTop="@dimen/text_size_lg"
            android:background="@drawable/ic_launcher_edt"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="text"
            android:fontFamily="@font/roboto_regular"
            android:hint="Mô tả"
            android:paddingStart="@dimen/text_size_md"
            android:ems="10"
            android:text=""
            tools:ignore="RtlSymmetry" />
        <EditText
            android:id="@+id/edt_category_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size_xxl"
            android:layout_marginTop="@dimen/text_size_lg"
            android:background="@drawable/ic_launcher_edt"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="text"
            android:fontFamily="@font/roboto_regular"
            android:hint="Loại"
            android:paddingStart="@dimen/text_size_md"
            android:ems="10"
            android:text=""
            tools:ignore="RtlSymmetry" />
        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_lg"
            android:height="54dp"
            android:backgroundTint="@color/red_300"
            android:text="Thêm mới"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/text_size_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_password" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>